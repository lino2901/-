def zagadka1():
    a = print('Загадка №1\n Оно принадлежит только вам, но другими людьми оно используется больше вас. О чем идет речь? \n На каждую загадку есть по 3 попытки!')
    answer = input('Введите ответ:')
    n = 0
    while n < 3:
        if answer == 'Ваше имя' or 'ваше имя' or 'ваше Имя':
            print('Правильный ответ!')
            break
        else:
            answer = input('Введите ответ:')
            print('Ответ неверный, попробуйте еще раз')
            n += 1
            continue


def zagadka2():
    a = print('Загадка №2\n Чем больше этого есть, тем меньше вы можете видеть. О чем идет речь?\n На каждую загадку есть по 3 попытки!')
    answer = input('Введите ответ:')
    n = 0
    while n < 3:
        if answer == 'Темнота' or 'темнота':
            print('Правильный ответ!')
            break
        else:
            answer = input('Введите ответ:')
            print('Ответ неверный, попробуйте еще раз')
            n += 1
            continue

def zagadka3():
    a = print('Загадка №3\n Меня можно разрушить, не касаясь меня, можно даже не видеть меня. Кем я могу быть?\n На каждую загадку есть по 3 попытки!')
    answer = input('Введите ответ:')
    n = 0
    while n < 3:
        if answer == 'Тишина' or 'Обещание' or 'тишина' or 'обещание':
            print('Правильный ответ!')
            break
        else:
            answer = input('Введите ответ:')
            print('Ответ неверный, попробуйте еще раз')
            n += 1
            continue


zagadka1()
zagadka2()
zagadka3()



