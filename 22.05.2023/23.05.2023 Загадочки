#1 блок загадок
def zagadka1():
    print('Загадка №1\n Оно принадлежит только вам, но другими людьми оно используется больше вас. О чем идет речь? \n  ')
    n = 1
    x = 0
    tries = 2
    answer = input('Введите ответ:')
    answer = answer.lower()
    while n < 4:
        if tries == 0:
            print('Game over')
            quit()
        if answer == 'ваше имя':
            print('Правильный ответ!')
            x += 1
            break
        else:
            print('Ответ неверный, попробуйте еще раз')
            tries = tries - 1
            n += 1
            answer = input('Введите ответ:')
            print(f'Жизней осталось:{tries}')
            continue

    print('Загадка №2\n Чем больше этого есть, тем меньше вы можете видеть. О чем идет речь?\n')
    z = 0
    answer2 = input('Введите ответ:')
    answer2 = answer2.lower()
    while z < 4:
            if tries == 0:
                print('Game over')
                quit()
            if answer2 == 'темнота':
                print('Правильный ответ!')
                x += 1
                break
            else:
                print('Ответ неверный, попробуйте еще раз')
                tries = tries - 1
                z += 1
                answer = input('Введите ответ:')
                print(f'Жизней осталось:{tries}')
                continue

    print('Загадка №3\n Меня можно разрушить, не касаясь меня, можно даже не видеть меня. Кем я могу быть?\n')
    k = 0
    answer3 = input('Введите ответ:')
    answer3 = answer3.lower()
    while k < 4:
        if tries == 0:
                print('Game over')
                quit()
        if answer3 == 'тишина':
            print('Правильный ответ!')
            x += 1
            break
        else:
            print('Ответ неверный, попробуйте еще раз')
            tries = tries - 1
            k += 1
            answer = input('Введите ответ:')
            print(f'Жизней осталось:{tries}')
            continue
    if tries == 0:
        print('Game over')
        quit()
    if tries == 3:
        print('Вы прошли игру с максимальным здоровьем!')
    total = n + z + k
    print(f'Количество попыток {total}')

#2 блок загадок
def zagadka2():
    print('Загадка №1\n Вы заходите в тёмную кухню. В ней есть свеча, керосиновая лампа и газовая плита. Что вы зажжёте в первую очередь? \n')
    n = 1
    x = 0
    tries = 2
    answer = input('Введите ответ:')
    answer = answer.lower()
    while n < 4:
        if tries == 0:
            print('Game over')
            quit()
        if answer == 'спичку':
            print('Правильный ответ!')
            x += 1
            break
        else:
            print('Ответ неверный, попробуйте еще раз')
            tries = tries - 1
            n += 1
            answer = input('Введите ответ:')
            print(f'Жизней осталось:{tries}')

    print('Загадка №2\n У семерых братьев по сестре. Сколько всего сестер?\n')
    z = 0
    answer2 = input('Введите ответ:')
    answer2 = answer2.lower()
    while z < 4:
            if tries == 0:
                print('Game over')
                quit()
            if answer2 == 'одна':
                print('Правильный ответ!')
                x += 1
                break
            else:
                print('Ответ неверный, попробуйте еще раз')
                tries = tries - 1
                z += 1
                answer = input('Введите ответ:')
                print(f'Жизней осталось:{tries}')
                continue

    print('Загадка №3\n На дереве сидело 10 птиц. Пришел охотник и подстрелил одну птицу. Сколько птиц осталось на дереве?\n')
    k = 0
    answer3 = input('Введите ответ:')
    answer3 = answer3.lower()
    while k < 4:
        if answer3 == 'ни одной':
            if tries == 0:
                print('Game over')
                quit()
            print('Правильный ответ!')
            x += 1
            break
        else:
            print('Ответ неверный, попробуйте еще раз')
            tries = tries - 1
            k += 1
            answer = input('Введите ответ:')
            print(f'Жизней осталось:{tries}')
            continue
    if tries == 3:
        print('Вы прошли игру с максимальным здоровьем!')
    total = n + z + k
    print(f'Количество попыток {total}')

#3 блок загадок
def zagadka3():
    print('Загадка №1\n Сколько раз можно вычесть 3 из 25?\n')
    n = 1
    x = 0
    tries = 2
    answer = input('Введите ответ:')
    answer = answer.lower()
    while n < 4:
        if tries == 0:
            print('Game over')
            quit()
        if answer == 'один':
            print('Правильный ответ!')
            x += 1
            break
        else:
            print('Ответ неверный, попробуйте еще раз')
            tries = tries - 1
            n += 1
            answer = input('Введите ответ:')
            print(f'Жизней осталось:{tries}')
            continue

    print('Загадка №2\nЧто может в одно и то же время: стоять и ходить, висеть и стоять, ходить и лежать?\n')
    z = 0
    answer2 = input('Введите ответ:')
    answer2 = answer2.lower()
    while z < 4:
            if tries == 0:
                print('Game over')
                quit()
            if answer2 == 'часы':
                print('Правильный ответ!')
                x += 1
                break
            else:
                print('Ответ неверный, попробуйте еще раз')
                tries = tries - 1
                z += 1
                answer = input('Введите ответ:')
                print(f'Жизней осталось:{tries}')
                continue

    print('Загадка №3\nКак человеку не спать 8 дней?\n')
    k = 0
    answer3 = input('Введите ответ:')
    answer3 = answer3.lower()
    while k < 4:
        if answer3 == 'спать по ночам':
            if tries == 0:
                print('Game over')
                quit()
            print('Правильный ответ!')
            x += 1
            break
        else:
            print('Ответ неверный, попробуйте еще раз')
            tries = tries - 1
            k += 1
            answer = input('Введите ответ:')
            print(f'Жизней осталось:{tries}')
            continue
    if tries == 3:
        print('Вы прошли игру с максимальным здоровьем!')
    total = n + z + k
    print(f'Количество попыток {total}')

#Меню игры
print('Добро пожаловать в мою игру!')
while True:
    print("1.Блок загадок №1\n")
    print("2.Блок загадок №2\n")
    print("3.Блок загадок №3\n")
    print("0. выйти из программы")
    cmd = input("Выберите пункт: ")

    if cmd == "1":
        zagadka1()

    elif cmd == "2":
        zagadka2()

    elif cmd == "3":
        zagadka3()

    elif cmd == "0":
        break
    else:
        print("Вы ввели не правильное значение")
